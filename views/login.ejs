<%- include("../public/partials/header") %>

<div class="container mt-5">
    <h3 class="my-3">Log into your Account </h3>
    <form action="/login" method="POST">
        <input type="email" name="email" placeholder="Email" class="form-control" required>
        <input type="password" name="password" placeholder="Password" class="mt-3 form-control" required>
        
        <input type="submit" value="LOGIN" class="mt-5 btn btn-md btn-danger">
    </form>

    
</div>
<div class="container mt-5">
    <p>Don't have an account yet?</p>
    <a href="/register" class="btn btn-primary">Create an account</a>
</div>

